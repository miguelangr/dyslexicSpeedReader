#!/bin/bash
# Instalar si no est치 instalado
# git clone https://github.com/Rasukarusan/shellnium

# Iniciar el navegador y autenticarse
source ~/shellnium/shellnium.sh
selenium::start chrome
selenium::navigate "https://db-author-prd.adobecqms.net/sites.html/content"

# Esperar y realizar el login (necesitar치s adaptar estos selectores)
selenium::wait_for_element_present "id=username"
selenium::input "id=username" "tu_usuario"
selenium::input "id=password" "tu_contrase침a"
selenium::click "id=submit-button"

# Esperar a que la autenticaci칩n se complete
selenium::wait_for_url "https://db-author-prd.adobecqms.net/sites.html/content"

# Extraer cookies
cookies=$(selenium::execute "return document.cookie")
echo "$cookies" > aem_cookies.txt

# Cerrar el navegador
selenium::quit
